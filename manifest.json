{
  "manifest_version": 3,
  "name": "tame",
  "version": "1.2.1",
  "description": "Facebook block seen and typing",
  "icons": {
    "48": "icons/tame-48.png",
    "96": "icons/tame-96.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.messenger.com/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.messenger.com/*"
      ],
      "resources": [
        "*"
      ]
    }
  ],
  "action": {
    "default_icon": "icons/tame-48.png",
    "default_title": "Tame",
    "default_popup": "popup/dist/index.html"
  },
  "background": {
    "scripts": [
      "scripts/dist/background.js"
    ]
  }
}
